<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    tools:context="com.shmily.fujinjing.enjoylife.presentation.view.activitys.AdvertisingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_advertising"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="3" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_0"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <com.shmily.fujinjing.enjoylife.presentation.widgets.RoundImageView
                android:id="@+id/enjoylife_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/enjoylife_new"
                zhy:type="round" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/enjoylife_logo">

                <TextView
                    android:id="@+id/enjoylife_slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enjoy_slogan"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/enjoylife_slogan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="@string/enjoy_time" />
            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/skip_advertising"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_20"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/skip_advertising_shape"
        android:gravity="center"
        android:text="@string/skip_advertising"
        android:textSize="@dimen/sp_10" />


</FrameLayout>
